---
const { icon, children } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Horario-Scheduler</title>
  </head>
  <body>
    <div class="menu-item">
      <div class="container-circle">
        <div class="menu">
          <img src={icon} alt="icon" class="icon" />
        </div>
      </div>
    </div>
    <style>
      .menu-item {
        margin: 5px 0;
      }
      .container-circle {
        background-color: white;
        padding: 10px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 1px 5px 6px 0px rgba(24, 24, 24, 0.75);
        margin: 10px;
        display: flex;
      }

      .menu {
        right: 100%;
        border-radius: 5px;
      }
      .icon {
        width: 20px;
        height: 20px;
      }
    </style>
  </body>
</html>
