---
const { icon, children } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Horario-Scheduler</title>
  </head>
  <body>
    <div class="menu-item">
      <span class="icon">{icon}</span>
    </div>
    <style>
      .menu-item {
        display: flex;
        align-items: center;
        margin: 5px 0;
        cursor: pointer;
        padding: 5px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .menu-item:hover {
        background-color: rgba(0, 0, 0, 0.1);
      }

      .icon {
        margin-right: 10px;
        font-size: 18px;
      }

      .text {
        font-size: 14px;
        color: #333;
      }
    </style>
  </body>
</html>
