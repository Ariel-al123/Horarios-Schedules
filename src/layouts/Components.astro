---
const { icon, children } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Horario-Scheduler</title>
  </head>
  <body>
    <div class="menu-item">
      <span class="icon">{icon}</span>
    </div>

    <style>
      .menu-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 10px 0;
        cursor: pointer;
        padding: 10px;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        background-color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .menu-item:hover {
        background-color: rgba(0, 0, 0, 0.1);
      }

      .icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
      }

      .icon-container {
        width: 24px;
        height: 24px;
      }
    </style>
  </body>
</html>
